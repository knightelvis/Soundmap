<div class="container">

  <h3>All Users</h3>

  <% @users.each do |user| %>
  <div class="row-fluid user-item">
    <div class="span1">#<%= user.id %></div>
    <div class="span1"><%= image_tag avatar_url(user) %></div>
    <div class="span2">
      <%= link_to user.email, "/users/#{user.id}" %>
    </div>
    <div>
      <%# @user = user %>
      <% unless user.id == current_user.id %>
          <div id="follow_form">
            <% @user = user %>
            <% if current_user.following?(@user) %>
                <%= render 'unfollow' %>
            <% else %>
                <%= render 'follow' %>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
  <% end %>

  <%= will_paginate @posts %>
</div>