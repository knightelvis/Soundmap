<script>
    $(function(){
        $('#myTags').tagit();
    });
    function passTags(){
        var tags = $('#myTags').tagit("assignedTags");
        $('#tmp_tags').val(tags);
        //alert($('#tmp_tags').val());
    }
</script>

<%= form_for(@sound, :multipart => true, :class => 'form-horizontal') do |f| %>
    <% if @sound.errors.any? %>
        <div id="error_explanation" class="alert alert-error alert-block">
          <h5><%= pluralize(@sound.errors.count, "error") %> prohibited this sound from being saved:</h5>
          <ul>
            <% @sound.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, :value => "thistitle" %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, :rows => 5, :class => 'input-xlarge' , :value => "desc"%>
    </div>
    <div class="field">
      <%= f.label :location %>
      <%= f.text_field :location , :value => "11,22"%>
    </div>
    <div class="field">
      <%= f.label :tags %>
      <%= hidden_field_tag :tmp_tags %>
      <ul id="myTags"></ul>
    </div>
    <div class="field">
      <%= f.label :path %>
      <%= f.file_field :path%>
    </div>
    <div class="actions">
      <%#= f.submit %>
      <%= submit_tag "Do it!", :class => 'btn btn-primary', :onclick => "passTags()"%>
    </div>

<% end %>

<script type="text/javascript">
    setLocation('coords');
</script>
  