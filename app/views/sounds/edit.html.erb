<% content_for :scripts do %>
    <%= javascript_include_tag :sounds %>
    <%= javascript_include_tag "tag-it" %>
<% end %>

<div class="container">

  <h3>Edit Sound</h3>

  <div class="row-fluid">
    <div class="span5">
      <%= render 'form' %>
    </div>

    <div class="span7">
      <div class="location-search-box">
        <form id="location-search" class="form-search">
          <div class="input-append">
            <input type="text" class="search-query" id="location-search-content" placeholder="Where are you?">
            <button type="submit" class="btn btn-primary" id="location-search-commit" data-loading-text="Loading...">Search</button>
          </div>
        </form>
      </div>
      <div id="map-select" class="map-container"></div>
    </div>
  </div>

  <p><%= link_to '← Back', :controller => 'map_view' %></p>

</div>