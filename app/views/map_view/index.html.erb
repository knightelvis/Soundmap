<% content_for :scripts do %>
    <%= javascript_include_tag :map_view %>
    <%= javascript_include_tag "tag-it" %>
<% end %>

<div class="container">

  <div id="map-box-expandable">
    <div class="map-wrapper">
      <div id="map"></div>
    </div>

    <div id="map-overlay">
      <div id="info-box-title">Now Playing</div>
      <div id="info-box">
        <div id="info-list">
          <h5 class="info-entry-title" id="p-title">My Voice in Santa Barbara!</h5>
          <p id="p-description">This is my ultimate test.</p>
          <div class="info-entry-author">By <a href="#" id="p-author">Juno</a> at <a href="#">Santa Barbara</a></div>
          <div class="info-entry-labels" id="p-tags">
            <a href="#"><span class="label label-info">Chinese</span></a>
            <span class="label label-info">life</span>
            <span class="label label-info">mood</span>
          </div>
        </div>
        <div class="player-wrapper">
          <audio id="player" src="sounds/1.mp3" controls preload="auto" autobuffer></audio>
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid" id="main-box">
    <div class="span8" id="news-feed-box">
    <ol>
      <% @feed_items.each do |feed_item| %>
      <li><%= feed_item.title %> by <%= feed_item.user.email %></li>
      <% end %>
    </ol>
    </div>

    <div class="span4">
      <div id="invite-form">
        <h4>Invite a Friend</h4>
        <%= form_tag('/invite', :method => 'post') do %>
          <div class="input-append">
            <%= text_field_tag('friend_email', nil, :placeholder => "Friend's email") %>
            <%= submit_tag('Invite!', :class => 'btn btn-primary') %>
          </div>
        <% end %>
      </div>

      <div>

        <p>Lorem</p>
        <p>Lorem</p>
        <p>Lorem</p>
        <p>Lorem</p>

        <% if user_signed_in? %>
        <table class="table">
          <% @sounds.each do |sound| %>
          <tr>
            <td class="span2"><%= sound.title %></td>
            <td class="span1"><button class="btn btn-primary btn-mini" onclick="play('<%= sound.id %>')">Play</button></td></tr>
          <% end %>
        </table>
        <% end %>

      </div>

      <div id="control-box">
        <%= link_to 'Create Your Own!', new_sound_path, {'class' => 'btn btn-success btn-block'} %>
      </div>
    </div>

  </div>
</div>
