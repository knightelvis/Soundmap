<%= form_for(@sound, :multipart => true, :class => 'form-horizontal') do |f| %>
    <% if @sound.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@sound.errors.count, "error") %> prohibited this sound from being saved:</h2>

          <ul>
            <% @sound.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, :rows => 5, :class => 'input-xlarge' %>
    </div>
    <div class="field">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>
    <div class="field">
      <%= f.label :path %>
      <%= f.file_field :upload_file %>
    </div>
    <div class="actions">
      <%#= f.submit %>
      <%= submit_tag "Create it!", :class => 'btn btn-primary'%>

    </div>



<% end %>
  