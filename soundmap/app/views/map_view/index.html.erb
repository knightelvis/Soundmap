<div class="container">
  <div class="row-fluid">
    <div class="span8">
      <div class="map-wrapper">
        <div id="map"></div>
      </div>
    </div>
    <div class="span4">

      <div id="info-box" class="well">
        <h4 id="info-title">Now Playing</h4>
        <dl>
          <dt>Title</dt>
          <dd>Ray</dd>
          <dt>Geo Location</dt>
          <dd>Lat, Lng</dd>
        </dl>

      </div>

      <div class="player-wrapper">
        <audio id="player" src="sounds/1.mp3" controls preload="auto" autobuffer></audio>
      </div>

      <div id="control-box">
        <%= link_to 'Create Your Own!', new_sound_path, {'class' => 'btn btn-success'} %>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">
    var play = function(id) {
        audio = document.getElementById('player');
        audio.pause();
        audio.src = id;
        audio.play();
    }
</script>